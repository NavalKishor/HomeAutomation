<?xml version="1.0" encoding="utf-8"?>

<OBJECT name="root">
	<OBJECT name="rooms">
		<OBJECT name="bedroom">
			<OBJECT name="backlight">
				<NODE name="brightness" defaultOf="DEFAULT">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>analogue_write</tech>
						<pin>09</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
			<OBJECT name="room temperature sensor">
				<NODE name="temperature" defaultOf="DEFAULT">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>analogue_read</tech>
						<pin>01</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
			<OBJECT name="loftbed lamp">
				<NODE name="power">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>digital_write</tech>
						<pin>08</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
			<OBJECT name="fan">
				<NODE name="power">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>digital_write</tech>
						<pin>09</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
			<OBJECT name="printer">
				<NODE name="power">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>digital_write</tech>
						<pin>10</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
			<OBJECT name="drill battery charger">
				<NODE name="power">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>digital_write</tech>
						<pin>11</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
			<OBJECT name="auxiliary device">
				<NODE name="power">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>digital_write</tech>
						<pin>12</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
			<OBJECT name="ambient light sensor">
				<NODE name="light" defaultOf="DEFAULT">
					<NODE_BEHAVIOUR type="ARDUINO_DEVICE">
						<tech>analogue_read</tech>
						<pin>02</pin>
					</NODE_BEHAVIOUR>
				</NODE>
			</OBJECT>
		</OBJECT>
	</OBJECT>
	<OBJECT name="weather">
		<OBJECT name="current">
			<NODE name="conditions">
				<NODE_BEHAVIOUR type="WEATHER">
					<time>current</time>
					<type>condition</type>
				</NODE_BEHAVIOUR>
			</NODE>
			<NODE name="temperature">
				<NODE_BEHAVIOUR type="WEATHER">
					<time>current</time>
					<type>temperature</type>
				</NODE_BEHAVIOUR>
			</NODE>
		</OBJECT>
	</OBJECT>
</OBJECT>
